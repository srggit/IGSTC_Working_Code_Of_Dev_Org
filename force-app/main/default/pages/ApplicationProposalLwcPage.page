        function loadAuraApp() {
            $Lightning.use("c:AuraWrapperApp", function() {
                $Lightning.createComponent(
                    "c:approvedExpenseComponent",
                    { recordId: recordId },
                    "lwcContainer",
                    function(cmp) {
