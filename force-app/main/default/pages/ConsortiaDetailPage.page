                            <div class="row mt-4">
                                <div class="col-md-6">
                                    <label class="control-label">
                                        <b>Email</b>
                                    </label>
                                    <input name="Email" placeholder="Email" class="form-control" type="email" ng-model="contactInstituteDetails.Email__c" ng-disabled="disable" />
