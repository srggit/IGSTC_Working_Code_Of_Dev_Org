    <div ng-controller="ConsortialCtrl">

        <head>

            <script>
                var userId = '{!$CurrentPage.parameters.id}';
            </script>
<apex:stylesheet value="{!$Resource.ApplicantPortalCSS}" />
        </head>

        <body>

            <div class="container px-4 mt-5">
                <div class="row mx-4">
                    <div class="col-md-12">
                            <ul class="nav nav-pills nav-fill gap-2 p-1 small bg-white border rounded-5 shadow-sm" id="pillNav2" role="tablist">
                                <li class="nav-item" role="presentation">                
                                <a href="#" ng-click="redirectPageURL('ProjectDetailPage')" class="nav-link rounded-5" id="basic_tab" data-bs-toggle="tab" type="button" role="tab" aria-selected="true"><i class="fa fa-home i-padding"></i>Project Details</a>
                                </li>
                                <li class="nav-item" role="presentation">
                                <a href="#" ng-click="redirectPageURL('ConsortiaDetailPage')" class="nav-link active rounded-5" id="consortia_tab" data-bs-toggle="tab" type="button" role="tab" aria-selected="false"><i class="fa-solid fa-people-group i-padding"></i>Consortia Details</a>
                                </li>
                                <li class="nav-item" role="presentation">
                                <a href="#" ng-click="redirectPageURL('Financial_Overview')" class="nav-link rounded-5" id="finance_tab" data-bs-toggle="tab" type="button" role="tab" aria-selected="false"><i class="fa-solid fa-money-bill-trend-up i-padding"></i>Finance Contribution</a>
                                </li>
                                <li class="nav-item" role="presentation">
                                <a href="#" ng-click="redirectPageURL('ProjectDetail')" class="nav-link rounded-5" id="project_tab" data-bs-toggle="tab" type="button" role="tab" aria-selected="false"><i class="fa-solid fa-arrows-to-dot i-padding"></i>Project Details</a>
                                </li>
                                <li class="nav-item" role="presentation">
                                <a href="#" ng-click="redirectPageURL('WorkPackages')" class="nav-link rounded-5" id="packge_tab" data-bs-toggle="tab" type="button" role="tab" aria-selected="false"><i class="fa-solid fa-box i-padding"></i>Work Package</a>
                                </li>
                            </ul>
                    </div>
                </div>
            </div>
            <div class="container mt-5 px-4">
                <div class="card h-100 m-5">
                    <div Class="card-header">
                        <h2 class="p-3">
                            <b>Consortia Details</b>
                        </h2>
                    </div>
                    <div class="card-body">
                        <div ng-repeat="consortia in consortiaDetails">
                            <div class="row ms-3 me-3">
                                <div class="col-md-8">
                                    <h4 class="heading-border-2">Account Details</h4>
                                </div>
                                <div class="col-md-4">
                                    <a type="button" class="float-end ms-2" ng-click="deleteAccountRow($index)">
                                        <i class="fa-solid fa-circle-xmark fa-2x text-danger"></i>
                                    </a>
                                    <a type="button" class="float-end" ng-click="addAccountRow()">
                                        <i class="fa-solid fa-circle-plus fa-2x text-success"></i>
                                    </a>
                                </div>
                            </div>
                            <div class="row ms-3 me-3">
                                <div class="col-md-4">
                                    <label class="control-label">Account Name</label>
                                    <span class="text-danger">*</span>
                                    <input name="name" type="Text" class="form-control" placeholder="Enter Your Name" ng-model="consortia.Name" required="true"
                                        ng-required="consortia.Name" ng-disabled="disable" />
                                </div>
                                <div class="col-md-4">
                                    <label class="control-label">Website</label>
                                    <span class="text-danger">*</span>
                                    <input name="Website" type="tel" class="form-control" placeholder="Enter Website" ng-model="consortia.Website" required="true"
                                        ng-required="consortia.Website" ng-disabled="disable" />
                                </div>
                                <div class="col-md-4">
                                    <label class="control-label">Country Type</label>
                                    <span class="text-danger">*</span>
                                    <select class="form-control" aria-label="Default select example" ng-model="consortia.Country_Type__c" required="true" ng-required="consortia.Country_Type__c"
                                        ng-disabled="disable">
                                        <option value="none" ng-selected="true">--None--</option>
                                        <option ng-repeat="staff in countrytype">{{staff}}</option>
                                    </select>
                                </div>
                            </div>
                            <div class="row ms-3 me-3 mt-4">
                                <div class="col-md-2">
                                    <label class="control-label">Industry</label>
                                    <input name="industry" type="checkbox" class="form-check-input" placeholder="Industry" ng-click="openCompanyPopup($index)"
                                        ng-model="consortia.Industry__c" ng-disabled="disable" />
                                </div>
                                <div class="col-md-2">
                                    <label class="control-label">Academia</label>
                                    <input name="academia" type="checkbox" class="form-check-input" placeholder="Academia" ng-click="openAcademiaPopup($index)"
                                        ng-model="consortia.Academia__c" ng-disabled="disable" />
                                </div>
                                <div class="col-md-2" ng-if="consortia.Industry__c == true && consortia.Country_Type__c == 'India'">
                                    <label class="control-label">DSIR Available ?</label>
                                    <span class="text-danger">*</span>
                                    <input type="checkbox" class="form-check-input" ng-model="consortia.Is_DSIR_Available__c" required="true" ng-required="consortia.Is_DSIR_Available__c"
                                        ng-disabled="disable" />
                                </div>
                                <div class="col-md-2">
                                    <span ng-if="consortia.Industry__c">
                                        <a type="button" class="color-theme" ng-click="openPopup('companyProfile',$index,'')">Company Profile</a>
                                    </span>&nbsp;
                                    <span ng-if="consortia.Academia__c">
                                        <a type="button" class="color-theme" ng-click="openPopup('Institute',$index,'')">
                                            <Label class="control-label">Institute</Label>
                                        </a>
                                    </span>
                                </div>
                            </div>
                            <div class="row ms-3 me-3 mt-3" ng-if="consortia.Is_DSIR_Available__c">
                                <div class="col-md-8">
                                    <label class="control-label" ng-if="consortia.Is_DSIR_Available__c">DSIR Recognition Details</label>
                                    <span class="text-danger">*</span>
                                    <input type="text" class="form-control" ng-model="consortia.DSIR_Recoginition_Details__c" maxlength="255" required="true"
                                        ng-required="consortia.DSIR_Recoginition_Details__c" ng-disabled="disable" />
                                </div>
                            </div>
                            <div class="row ms-3 me-3 mt-5">
                                <div class="col-md-12">
                                    <h4 class="heading-border-2">Contact Details</h4>
                                </div>
                            </div>
                            <div class="row ms-3 me-3">
                                <div class="col-md-12">
                                    <table class="table table-bordered table-striped">
                                        <thead>
                                            <tr>
                                                <th class="p-2">Details</th>
                                                <th class="p-2">First Name</th>
                                                <th class="p-2">Last Name</th>
                                                <th class="p-2">Email</th>
                                                <th class="p-2">Phone</th>
                                                <th nowrap="true" width="15%" class="p-2">
                                                </th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr ng-repeat="con in consortia.Contacts">
                                                <td class="p-4">
                                                    <label>{{$index + 1}}</label>
                                                </td>
                                                <td>
                                                    <label>
                                                        <input class="form-control" ng-model="con.FirstName" ng-disabled="disable" />
                                                    </label>
                                                    <br/>
                                                </td>
                                                <td>
                                                    <label>
                                                        <input class="form-control" ng-model="con.LastName" ng-disabled="disable" required="true" ng-required="consortia.Website"
                                                        />
                                                    </label>
                                                    <br/>
                                                </td>
                                                <td>
                                                    <!--<span class="required-asterisk" style="color:red;">*</span>-->
                                                    <label>
                                                        <input class="form-control" ng-model="con.Email" required="true" ng-required="con.Email" ng-disabled="disable" />
                                                    </label>
                                                </td>
                                                <td>
                                                    <label>
                                                        <input class="form-control" ng-model="con.Phone" ng-disabled="disable" />
                                                    </label>
                                                    <br/>
                                                </td>
                                                <td class="text-center">
            
                                                    <a type="button" ng-click="addRow($parent.$index,$index)">
                                                        <i class="fa-solid fa-circle-plus fa-2x text-success"></i>
                                                    </a>
                                                    <a type="button" ng-click="deleteRow($parent.$index,$index)">
                                                        <i class="fa-solid fa-circle-xmark fa-2x text-danger"></i>
                                                    </a>
                                                    <a title="Upload CV" type="button" ng-click="openPopup('cvPage',$parent.$index,$index)">
                                                        <i class="fa-solid fa-file-arrow-up fa-2x text-primary"></i>
                                                    </a>
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer">
                        <button type="button" class="blue-btn float-end ms-2" ng-click="submitAllPatnerDetials()">
                            <i class="fa-solid fa-check me-2"></i>Submit and Next</button>
                        <button type="button" class="blue-bordered-btn float-end" ng-click="redirectPageURL('ProjectDetailPage')">
                            <i class="fa-solid fa-arrow-left me-2"></i>Previous</button>
                    </div>
                </div>
            </div>
            <!-- The Modal -->
            <div class="modal" id="companyProfile">
                <div class="modal-dialog modal-dialog-centered modal-xl">
                    <div class="modal-content">
                        <!-- Modal Header -->
                        <div class="modal-header">
                            <h2 class="modal-title">
                                <div class="row ms-5">
                                    <h3 class="heading-border-2">
                                            <b>Company Profile (Industry Partner Only)</b>
                                    </h3>
                                </div>
                            </h2>
                            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                        </div>

                        <!-- Modal body -->
                        <div class="modal-body">
                            <div class="row">
                                <div class="col-md-12" ng-show="secondstage">
                                    <input type="checkbox" class="form-check-input" ng-model="applicantDetails.Large_Industry__c" ng-disabled="disable" />&nbsp; Large Industry&nbsp;&nbsp;&nbsp;
                                    <input type="checkbox" class="form-check-input" ng-model="applicantDetails.SME__c" ng-disabled="disable" />&nbsp; SME&nbsp;&nbsp;&nbsp;
                                    <input type="checkbox" class="form-check-input" ng-model="applicantDetails.Start_Up__c" ng-disabled="disable" />&nbsp; Start-Up
                                </div>
                            </div>
                                <div class="row mt-4">
                                <div class="col-md-6">
                                    <label class="control-label">
                                        <b>Name</b>
                                    </label>
                                    <input type="text" class="form-control" ng-model="applicantDetails.Name" maxlength="255" ng-disabled="disable" />
                                </div>
                                <div class="col-md-6">
                                    <label class="control-label">
                                        <b>Department/Division</b>
                                    </label>
                                    <input type="text" class="form-control" ng-model="applicantDetails.Department__c" maxlength="255" ng-disabled="disable" />
                                </div>
                            </div>
                            <div class="row mt-4">
                                <div class="col-md-6">
                                    <label class="control-label">
                                        <b>Street</b>
                                    </label>
                                    <input type="text" class="form-control" ng-model="applicantDetails.ShippingStreet" maxlength="255" ng-disabled="disable" />
                                </div>
                                <div class="col-md-6">
                                    <label class="control-label">
                                        <b>City</b>
                                    </label>
                                    <input type="text" class="form-control" ng-model="applicantDetails.ShippingCity" maxlength="255" ng-disabled="disable" />
                                </div>
                            </div>
                            <div class="row mt-4">
                                <div class="col-md-6">
                                    <label class="control-label">
                                        <b>State</b>
                                    </label>
                                    <input type="text" class="form-control" ng-model="applicantDetails.ShippingState" maxlength="255" ng-disabled="disable" />
                                </div>
                                <div class="col-md-6">
                                    <label class="control-label">
                                        <b>Post Code</b>
                                    </label>
                                    <input type="text" class="form-control" ng-model="applicantDetails.ShippingPostalCode" maxlength="255" ng-disabled="disable" />
                                </div>
                            </div>
                            <div class="row mt-4">
                                <div class="col-md-6">
                                    <label class="control-label">
                                        <b>Country</b>
                                    </label>
                                    <input type="text" class="form-control" ng-model="applicantDetails.ShippingCountry" maxlength="255" ng-disabled="disable" />
                                </div>
                                <div class="col-md-6">
                                    <label class="control-label">
                                        <b>Head Of Project</b>
                                    </label>
                                    <input type="text" class="form-control" ng-model="applicantDetails.Head_Of_Project__c" maxlength="255" ng-disabled="disable" />
                                </div>
                            </div>
                            <div class="row mt-4">
                                <div class="col-md-6">
                                    <label class="control-label">
                                        <b>Email</b>
                                    </label>
                                    <input type="text" class="form-control" ng-model="applicantDetails.Email__c" maxlength="255" ng-disabled="disable" />
                                </div>
                                <div class="col-md-6">
                                    <label class="control-label">
                                        <b>Phone</b>
                                    </label>
                                    <input type="text" class="form-control" ng-model="applicantDetails.Phone" maxlength="255" ng-disabled="disable" />
                                </div>
                            </div>
                            <div class="row mt-4">
                                <div class="col-md-6">
                                    <label class="control-label">
                                        <b>Homepage URL</b>
                                    </label>
                                    <input class="form-control" type="url" ng-model="applicantDetails.Homepage_URL__c" ng-disabled="disable" />
                                </div>
                                <div class="col-md-6">
                                    <label class="control-label">
                                        <b>Year Of Establishment</b>
                                    </label>
                                    <input type="text" class="form-control" ng-model="applicantDetails.Year_Of_Establishment__c" maxlength="255" ng-disabled="disable" />
                                </div>
                            </div>
                            <div class="row mt-4">
                                <div class="col-md-6">
                                    <label class="control-label">
                                        <b>Main Business Area</b>
                                    </label>
                                    <input type="text" class="form-control" ng-model="applicantDetails.Main_Business_Area__c" maxlength="255" ng-disabled="disable" />
                                </div>
                                <div class="col-md-6">
                                    <label class="control-label">
                                        <b>Number Of Permanent Employees</b>
                                    </label>
                                    <input type="Number" class="form-control" ng-model="applicantDetails.NumberOfEmployees" ng-disabled="disable" />
                                </div>
                            </div>
                            <div class="row mt-4">
                                <div class="col-md-6">
                                    <label class="control-label">
                                        <b>Infrastructural Facilities</b>
                                    </label>
                                    <input type="text" class="form-control" ng-model="applicantDetails.Infrastructural_Facilities__c" maxlength="255" ng-disabled="disable" />
                                </div>
                                <div class="col-md-6">
                                    <label class="control-label">
                                        <b>Domain Expertise Available/Existing</b>
                                    </label>
                                    <input type="text" class="form-control" ng-model="applicantDetails.Domain_Expertise_Available__c" maxlength="255" ng-disabled="disable" />
                                </div>
                            </div>
                            <div class="row mt-4">
                                <div class="col-md-6">
                                    <label class="control-label">
                                        <b>Ownership Profile</b>
                                    </label>
                                    <textarea class="form-control" ng-model="applicantDetails.Ownership_Profile__c" maxlength="131072" ng-disabled="disable" />
                                </div>
                                <div class="col-md-6">
                                    <label class="control-label">
                                        <b>Last Year's Balance</b>
                                    </label>
                                    <input type="Number" class="form-control" ng-model="applicantDetails.Last_Year_s_Balance__c" ng-disabled="disable" />
                                </div>
                            </div>
                            <div class="row mt-4">
                                <div class="col-md-6">
                                    <button type="button" class="blue-btn mt-5" ng-click="saveDetails()"><i class="fa-solid fa-check me-2"></i>Submit and Next</button>
                                </div>
                            </div>
                        </div>

                        <!-- Modal footer -->

                    </div>
                </div>
            </div>


            <div class="modal" id="Institute">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <!-- Modal Header -->
                        <div class="modal-header">
                            <h4 class="modal-title">
                                <div class="row">
                                    <h4 class="heading-border-2 ms-5">
                                            <b>Institution</b>
                                    </h4>
                                </div>
                            </h4>
                            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                        </div>

                        <!-- Modal body -->
                        <div class="modal-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <label class="control-label">
                                        <b>Name</b>
                                    </label>
                                    <input name="Name" placeholder="Name" class="form-control" type="text" ng-model="contactInstituteDetails.Name" maxlength="255" ng-disabled="disable" />
