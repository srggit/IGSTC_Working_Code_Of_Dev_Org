        align-items: center;
        }
        
        .company-logo{
        height: 32px;
        width: 92px;
        margin: 32px 0 0 40px;
        /* border: 1px solid; */
        }
        
        .logo{
        width: 100%;
        height: 100%;
        object-fit: contain;
        }
        
