        flex-direction: column;
        justify-content: space-between;
        }
        
        .profile-title{
        width: 100%;
        border-bottom: 1px solid gray;
        padding: 16px 0;
        display: flex;
        align-items: center;
        }
        
        .profile-img{
        margin-right: 24px;
        width: 48px;
        height: 48px;
        background-color: #FB8A2E;
        border-radius: 50%;
        }
        .profile-info{
        
        }
        
        .profile-Name{
        font-size: 14px;
        font-weight: 600;
        color: #000000;
        margin-bottom: 5px;
        }
        
        .profile-email{
        font-size: 12px;
        font-weight: 400;
        color: #6B6B6B;
        }
        
        .password{
        font-size: 14px;
        font-weight: 600;
        color: #000000;
        cursor: pointer;
        }
        
        .section-title{
        font-size: 24px;
        font-weight: 600;
        margin: 24px 0;
        color: #4F1BA3;
        }
        
        
        .grid{
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(420px, 1fr));
        gap: 16px;
        min-height: 60vh;
        margin-bottom: 48px;
        }
        
        .card{
        min-height: 193px;
        border-radius: 24px;
        border: 1px solid var(--Stroke, #E7EAEE);
        box-shadow: 0px 4px 4px 0px #0000001F;
        padding: 16px 18px;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        }
        
        .head{
        display: flex;
        height: 48px;
        /* border: 1px solid; */
        }
        
        .head-img{
        width: 48px;
        height: 48px;
        border-radius: 50%;
        background-color: orange;
        margin-right: 16px;
        }
        
        .head-text{
        height: 43px;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        /* border: 1px solid; */
        }
        
        .title{
        font-size: 20px;
        font-weight: 700;
        text-transform: uppercase;
        color: #000000;
        }
        
        .date{
        font-size: 11px;
        font-weight: 600;
        color: #6B6B6B;
        }
        
        .date1{
        color: #E2425C;
        }
        
        .desc{
        font-size: 12px;
        font-weight: 400;
        line-height: 16px;
        color: #343434;
        
        display: -webkit-box;
        -webkit-line-clamp: 3;        /* limit to 3 lines */
        -webkit-box-orient: vertical;
        overflow: hidden;
        text-overflow: ellipsis;
        
        /* IMPORTANT for long strings with no spaces */
        word-break: break-word;
        overflow-wrap: anywhere;
        white-space: normal;
        margin: 16px 0;
        }
        
        .actions{
        width: 220px;
        display: flex;
        justify-content: space-between;
        }
        
        .action-btns{
        width: 106px;
        height: 32px;
        border-radius: 24px;
        display: flex;
        justify-content: center;
        align-items: center;
        font-size: 14px;
        font-weight: 600;
        border: none;
        box-sizing: border-box;
        cursor: pointer;
        color: white;
        }
        
        /* .action-btns:hover{
        filter: contrast(50%);
        } */
        .apply{
        background-color: #4F1BA3;
        
        }
        
        .know-more{
        color: #4F1BA3;
        border: 1px solid #4F1BA3;
        }
        
        .comp-view{
        background-color:  #709739;
        }
        
        .rej-view{
        background-color: #E2425C;
        }
        
        .list{
        margin: 16px 0;
        }
        
        .list-item{
        margin-bottom: 8px;
        letter-spacing: 1%;
        font-size: 12px;
        font-weight: 600;
        color: #343434;
        text-indent: -24px;
        margin-left: 27px;
        }
        
        .grant-icon{
        width: 16px;
        height: 16px;
        background-color: grey;
        margin-right: 8px;
        }
        
        .clock{
        color: #FB8A2E;
        }
        
        .status{
        color: #709739;
        }

        /* profile section */

        .profile-tab{
            height: 30px;
            width: 100%;
            border-bottom: 1px solid var(--Grey-1, #6B6B6B);
            display: flex;
            justify-content: space-between;
            margin: 30px 0 32px 0;
        }

        .tab-item{
            font-size: 16px;
            font-weight: 600;
            color: #343434;
            height: 30px;
            display: flex;
            justify-content: center;
            /* border: 1px solid;  */
            cursor: pointer;
        }

        .profile-content{
            width: 96%;
            margin: 0 auto;
            border: 1px solid;
            background-color: white;
            box-shadow: 0px 4px 4px 0px #0000001F;
            border-radius: 8px;
            height: 65vh;
            padding: 16px;
            overflow-y: auto;
            scrollbar-width: none;
            -ms-overflow-style: none;
            
            @media (min-width: 1400px){
                height: 73vh;
            }
        }
        .profile-content::webkit-scrollbar{
            display: none;
        }
        

        .active-tab{
            color: #4F1BA3;
            border-bottom: 4px solid #4F1BA3;
        }

        /* Basic details */
        .basic-head{
            height: 128px;
            width: 100%;
            border: 1px solid;
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 24px;
        }

        .basic-info{
            /* width: 322px; */
            height: 100%;
            display: flex;
            align-items: center;
        }

        .profile-img{
            border-radius: 50%;
            width: 128px;
            height: 128px;
            background-color: orange;
            margin-right: 20px;
        }

        .basic-name{
            height: 40px;

        }
        
        .basic-profile-name{
            font-size: 16px;
            font-weight: 500;
            color: #000000;
        }

        .basic-role{
            font-size: 16px;
            font-weight: 400;
            color: #6C757D;
        }

        .edit-btn{
            width: 125px;
            height: 48px;
            color: #4F1BA3;
            border: 0.88px solid #4F1BA3;
            border-radius: 8px;
            font-size: 22px;
            font-weight: 700;
            background: white;
            cursor: pointer;
        }

        .save-btn{
            background: #4F1BA3;
            color: white;
            border: none;
        }

        .form-group{
            height: 73px;
            width: 100%;
            display: flex;
            justify-content: space-between;
            border: 1px solid;
            margin-bottom: 24px;
        }

        .field-group{
            height: 100%;
            /* width: 50%; */
            /* border: 1px solid; */
            display: flex;
            flex-direction: column;
            flex-direction: column;
            justify-content: space-between;
        }

        #salutation{
            height: 46px;
            width: 102px;
        }

        .form-name{
            width: 45%;
        }


        .field-label{
            font-size: 14px;
            font-weight: 600;
            color: Grey;
        }

        .highlight-label{
            color: #000000;
        }

        .astrik{
            color: #E2425C;
            font-weight: 600;
            font-size: 18px;
        }

        .field-input:disabled{
            height: 46px;
            border-radius: 8px;
            border: 1px solid #D9D9D9;
            background: #F1F0F0CC;
            color: #6B6B6B;
            font-size: 14px;
            font-weight: 500;
            transition: highlight-input .3s ease;
        }

        .designation{
            width: 100%;
        }

        .highlight-input{
            background: white;
            color: #000000;
        }


        @media (min-width: 1400px){
        .sidemenu{
        width: 15%;
        }
        
        .content{
        width: 85%;
        }
        .header{
        width: 85%;
        }
        
        }
        
    </style>
    
    
    <div class="main-container" ng-app="igstcApp" ng-controller="DashCtrl as vm">
        <div class="sidemenu">
            <div class="company-logo"><apex:image url="{!URLFOR($Resource.Logo)}" styleClass="logo"/></div>
            <div class="navblock">
                <ul class="navlist">
                    <li Class="nav-item"><apex:image styleClass="nav-icon"></apex:image> Dashboard</li>
                    <li Class="nav-item active"><apex:image styleClass="nav-icon"></apex:image> Programs</li>
                    <li Class="nav-item"><apex:image styleClass="nav-icon"></apex:image> Get Help</li>
                    <li Class="nav-item"><apex:image styleClass="nav-icon"></apex:image> FAQ's</li>
                </ul> 
                
                <ul class="navlist">
                    <li Class="nav-item"><apex:image styleClass="nav-icon"></apex:image> profile</li>
                    <li Class="nav-item"><apex:image styleClass="nav-icon"></apex:image>Logout</li>    
                </ul>
            </div>
        </div>
        <div class="content">
            <div class="content">
                <div class="header">
                    <div class="profile">
                        <i class="fa-regular fa-bell bell"></i>
                        <div class="line">|</div>
                        <!-- User Name dynamically -->
                        <span class="name">{!$User.FirstName} {!$User.LastName}</span>
                        
                        <div class="profile-image"></div>
                        
                        <div ng-hide="vm.showProfileBox" ng-click="vm.showProfileBox = !vm.showProfileBox">
                            <i class="fa-solid fa-angle-down arrow-icon"></i>
                        </div>
                        <div ng-show="vm.showProfileBox" ng-click="vm.showProfileBox = !vm.showProfileBox">
                            <i class="fa-solid fa-angle-up arrow-icon"></i>
                        </div>
                    </div>
                    
                    <div class="profile-box" ng-show="vm.showProfileBox">
                        <div class="profile-title">
                            <div class="profile-img"></div>
                            <div class="profile-info">
                                <!-- User Full Name -->
                                <div class="profile-Name">{!$User.FirstName} {!$User.LastName}</div>
                                <!-- User Email -->
                                <div class="profile-email">{!$User.Email}</div>
                            </div>
                        </div>
                        <div class="password">Reset Password</div>
                        <div class="password">Logout</div>
                    </div>
                </div>
            </div>
            
            
            <!-- profile page -->
             <div class="profile-tab">
                <div class="tab-item" ng-repeat= "tab in vm.tabs" ng-click="vm.selectTab($index)" ng-class="{'active-tab': vm.activeTab === $index}">[[tab]]</div>
             </div>

             <div class="profile-content">

                <!-- Basic Details -->
                <div class="profile-form basic-details" ng-show="vm.activeTab === 0">
                    <div class="basic-head">
                        <div class="basic-info">
                            <apex:image url="" styleClass="profile-img" alt="profile-image"/>
                            <div class="basic-name">
                                <div class="basic-profile-name">Narendra Kumar</div>
                                <div class="basic-role">Senior Real Estate Agent</div>
                            </div>
                        </div>

                        <button class="edit-btn" ng-click="vm.handleEdit()" ng-class="{'save-btn' : vm.isEditMode}">[[vm.isEditMode ? 'Save' : "Edit"]]</button>
                    </div>
                    
                    <div class="form-group">
                        <div class="field-group">
                            <label class="field-label" ng-class="{'highlight-label' : vm.isEditMode}">Salutation <span class="astrik" ng-show="vm.isEditMode">*</span></label>
                            <select id="salutation" class="field-input" ng-class="{'highlight-input' : vm.isEditMode}" ng-disabled="!vm.isEditMode">
                                <option value="Dr">Dr.</option>
                                <option value="Mr">Mr.</option>
                                <option value="Mrs">Mrs.</option>
                                <option value="Miss">Miss.</option>
                            </select>
                        </div>
                        <div class="field-group form-name">
                            <label class="field-label">Project Partner [First Name]</label>
                            <input class="field-input" type="text"/>
                        </div>

                        <div class="field-group form-name">
                            <label class="field-label">Project Partner [Last Name]</label>
                            <input class="field-input" type="text"/>
                        </div>
                    </div> 

                    <div class="form-group">
                        <div class="field-group designation">
                            <label class="field-label">Current Position/Designation</label>
                            <input class="field-input" type="text"/>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="field-group">
                            <label class="field-label">Institution/Industry</label>
                            <div class="radio-grp">
                                <input type="radio" id="academia" name="institution" value="academia"/>
                                <label for="academia" class="field-label">Academia</label>
                            </div>
                            <div class="radio-grp">
                                <input type="radio" id="industry" name="institution" value="industry"/>
                                <label for="industry" class="field-label">Industry</label>
                            </div>
                        </div> 

                        <div class="field-group">
                            <label class="field-label">Institution/Organisation Name</label>
                            <input class="field-input" type="text"/>
                        </div> 

                        <div class="field-group">
                            <label class="field-label">Department/Division</label>
                            <input class="field-input" type="text"/>
                        </div>                                            
                    </div>

                    <div class="form-group">
                        <div class="field-group">
                            <label class="field-label">Home Page URL</label>
                            <input class="field-input" type="text"/>
                        </div>
                        <div class="field-group">
                            <label class="field-label">Email</label>
                            <input class="field-input" type="text"/>
                        </div>
                        <div class="field-group">
                            <label class="field-label">Phone</label>
                            <input class="field-input" type="text"/>
                        </div>
                        <div class="field-group">
                            <label class="field-label">Country</label>
                            <input class="field-input" type="text"/>
                        </div>                                                                        
                    </div>

                    <div class="form-group">
                        <div class="field-group">
                            <label class="field-label">Address</label>
                            <input class="field-input" type="text"/>
                        </div>    
                         <div class="field-group">
                            <label class="field-label">City</label>
                            <input class="field-input" type="text"/>
                        </div>                                                   
                    </div>

                    <div class="form-group">
                        <div class="field-group">
                            <label class="field-label">Country State</label>
                            <input class="field-input" type="text"/>
                        </div>   
                        <div class="field-group">
                            <label class="field-label">Postal/Zip Code</label>
                            <input class="field-input" type="text"/>
                        </div>   
                    </div>

                    <div class="form-group">
                        <div class="field-group">
                            <label class="field-label">City</label>
                            <input class="field-input" type="file"/> 
                        </div>   

                        <apex:image url="" styleClass="signature" alt="signature"/>
                    </div>
                </div>
                <div class="profile-form" ng-show="vm.activeTab === 1">education details</div>
                <div class="profile-form" ng-show="vm.activeTab === 2">employment details</div>
                <div class="profile-form" ng-show="vm.activeTab === 3">bank details</div>


             </div>

        </div>
    </div>
    
    
    <script>
    (function(){
        var app = angular.module("igstcApp", [])
        .config(['$interpolateProvider', function($interpolateProvider){
            $interpolateProvider.startSymbol('[[').endSymbol(']]');
        }]);
        
        app.controller('DashCtrl', [function(){
            var vm = this;
            
            vm.showProfileBox = false;

            // profile tab 
            vm.tabs =  [
                 "Basic Details",
      "Education Details",
      "Employment Details",
      "Bank Details"
            ];

            vm.activeTab = 0;
            
            vm.selectTab = function(index) {
      vm.activeTab = index;
    };

    vm.handleEdit = function(){
        vm.isEditMode = !vm.isEditMode;
        console.log(isEditMode);
        
    }

        }])
    }())
    </script>
    
    
    
</apex:page>