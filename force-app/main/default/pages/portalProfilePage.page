<apex:page showHeader="false" sidebar="false" docType="html-5.0" controller="ProfeamsController">
    <!-- AngularJS + Font Awesome -->
    <apex:includescript value="https://ajax.googleapis.com/ajax/libs/angularjs/1.8.3/angular.min.js"/>
    <apex:includescript value="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/js/all.min.js"/>
    
    <style>
        
        body { font-family: Arial, sans-serif; margin: 0; padding: 0; background-color: #F9F9FB; box-sizing: border-box; }
        
        .main-container{
        height: 100%;
        width: 100%;
        display: flex;
        }
        
        .sidemenu{
        width: 20%;
        height: 100%;
        position: fixed;
        top:0;
        left: 0;
        background-color: white;
        padding-bottom: 55px;
        }
        
        .content{
        width: 80%;
        /*  height: 200vh; */
        background-color: #F9F9FB;
        position: absolute;
        right: 0;
        top: 0;
        overflow-y: auto;
        padding: 64px 48px 24px;
        box-sizing: border-box;
        
        }
        
        .header{
        height: 64px;
        width: 80%;
        border-bottom: 1px solid #D5D5D5;
        box-shadow: 0px 4px 4px -2px rgba(0, 0, 0, 0.25);
        position: fixed;
        top:0;
        right: 0;
        z-index: 10;
        background-color:  #F9F9FB;
