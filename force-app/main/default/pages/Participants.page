                                        <i class="fas fa-plus-circle icon" ng-click="addParticipant('german')"></i>
                                    </th>
                                </tr>
                            </thead>

                            <tbody>
                                <tr ng-repeat="participant2 in germanList">
                                    <td>{{$index+1}}</td>
                                    <td>
                                        <input ng-focus="removeClass('name1',$index)" id="name1{{$index}}" type="text" class="form-control" ng-model="participant2.Name"
                                            ng-disabled="proposalStage" />
                                    </td>
                                    <td>
                                        <input ng-focus="removeClass('affiliation2',$index)" id="affiliation2{{$index}}" type="text" class="form-control" ng-model="participant2.Affiliation__c"
                                            ng-disabled="proposalStage" />
                                    </td>
                                    <td>
                                        <input ng-focus="removeClass('org2',$index)" id="org2{{$index}}" type="text" class="form-control" ng-model="participant2.Organisation_Institute__c"
                                            ng-disabled="proposalStage" />
                                    </td>
                                    <td>
                                        <input ng-focus="removeClass('email2',$index)" id="email2{{$index}}" type="email" class="form-control" ng-model="participant2.Email__c"
                                            ng-disabled="proposalStage" />
                                    </td>
                                    <td>
                                        <input ng-focus="removeClass('phone2',$index)" id="phone2{{$index}}" type="text" class="form-control" ng-model="participant2.Phone__c"
