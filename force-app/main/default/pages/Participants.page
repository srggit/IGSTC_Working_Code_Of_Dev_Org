                    <div class="row mt-3">
                        <div class="col-md-2">
                            <label class="float-end pt-3">Participant Type</label>
                        </div>
                        <div class="col-md-4 pt-2">
                            <input class="pt-1 color-theme w-75 float-start" aria-label="Default select example" style="font-weight:500" ng-model="IndianParticipant"
                                ng-disabled="true" />
                        </div>
                    </div>
                    <div>
                        <table class="table mt-3" cellpadding="4">
                            <thead>
                                <tr>
                                    <th style="width:5%;">Sr.No</th>
                                    <th style="width:15%;">Name
                                        <span class="required-asterisk" style="color:red;">*</span>
                                    </th>
                                    <th style="width:20%;">Position/Designation
                                        <span class="required-asterisk" style="color:red;">*</span>
                                    </th>
                                    <th style="width:18%;">Organisation
                                        <span class="required-asterisk" style="color:red;">*</span>
                                    </th>
                                    <th style="width:15%;">E-Mail
                                        <span class="required-asterisk" style="color:red;">*</span>
                                    </th>
                                    <th style="width:13%;">Phone</th>
                                    <th style="width:14%;">Whether the participant is a speaker?
                                        <span class="required-asterisk" style="color:red;">*</span>
                                    </th>
                                    <th style="width:3%;" ng-hide="proposalStage">
                                        <i class="fas fa-plus-circle icon" ng-click="addParticipant('india')"></i>
                                    </th>
                                </tr>
                            </thead>

                            <tbody>
                                <tr ng-repeat="participant in indianList">
                                    <td>{{$index+1}}</td>
                                    <td>
                                        <input ng-focus="removeClass('name',$index)" id="name{{$index}}" type="text" class="form-control" ng-model="participant.Name"
                                            ng-disabled="proposalStage" />
                                    </td>
                                    <td>
                                        <input ng-focus="removeClass('affiliation',$index)" id="affiliation{{$index}}" type="text" class="form-control" ng-model="participant.Affiliation__c"
                                            ng-disabled="proposalStage" />
                                    </td>
                                    <td>
                                        <input ng-focus="removeClass('org',$index)" id="org{{$index}}" type="text" class="form-control" ng-model="participant.Organisation_Institute__c"
                                            ng-disabled="proposalStage" />
                                    </td>
                                    <td>
                                        <input ng-focus="removeClass('email',$index)" id="email{{$index}}" type="email" class="form-control" ng-model="participant.Email__c"
                                            ng-disabled="proposalStage" />
                                    </td>
                                    <td>
                                        <input ng-focus="removeClass('phone',$index)" id="phone{{$index}}" type="text" class="form-control" ng-model="participant.Phone__c"
                                            ng-disabled="proposalStage" />
                                    </td>
                                    <td>
                                        <select ng-focus="removeClass('nature',$index)" id="nature{{$index}}" class="form-control" aria-label="Default select example"
                                            ng-model="participant.Whether_Participant_is_presenting__c" ng-disabled="proposalStage">
                                            <option ng-repeat="staff in participatingWorkshop">{{staff}}</option>
                                        </select>
                                    </td>
                                    <td ng-hide="proposalStage">
                                        <i class="fas fa-times-circle icon" ng-click="removeParticipant($index,'indian')"></i>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                        <!-- </div> -->
                    </div>
                    <br/>

