<apex:page sidebar="false" showHeader="false" standardStylesheets="false" controller="IndustrialFellowshipController">    
    <html>
    <div ng-controller="PECFARDocUpload_Ctrl">

        <head>
            <apex:stylesheet value="{!$Resource.ApplicantPortalCSS}" />
        </head>

        <body>
            <div class="container px-4 mt-5">
                <div class="row mt-3">
                    <div class="col-md-12">
                        <ul class="nav nav-pills nav-fill gap-2 p-1 small bg-white border rounded-5 shadow-sm" id="pillNav2" role="tablist">
                            <li class="nav-item" role="presentation">
                                <a href="#" class="nav-link rounded-5" id="basic_tab" data-bs-toggle="tab"
                                    type="button" role="tab" aria-selected="true">
                                    <i class="fa-solid fa-circle-check fa-lg text-success me-2" ng-show="showDecisionCheck"></i>
                                    <i class="fa fa-home i-padding"></i>Invitation and Visit Letter</a>
                            </li>
                            
                            
                        </ul>
                    </div>
                </div>

                <div class="modal" id="filePreview">
                    <div class="modal-dialog" style="min-width:120rem">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h4 class="modal-title">
                                    <div class="d-flex" style="background:unset;">
                                        <h3 style="text-align: center"><b>{{selectedFile.userDocument.Name}}</b></h3>
                                    </div>
                                </h4>
                                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                            </div>
                            <div class="modal-body">
                                <iframe style="width:100%;height:75vh;border: 0px;border-radius: 10px;" id="file_frame" title="File"></iframe>
                            </div>
                        </div>
                    </div>
                </div>
               
                
                    
                
                <div class="row mt-5">
                        <div class="col-md-6">
                            <label class="font-if mb-2">Euro Remittance Invoice <b>(German applicant only)</b><span class="text-danger me-2">*</span></label>
                                <div class="col-md-9" style="padding-left: 0px !important; padding-right: 0px !important; padding-right: 15px  !important">
                                    <div class="input-group input-group-lg">
                                        <input type="file" accept=".pdf" id="{{euroRemittance.userDocument.Name}}" class="form-control "/>
                                        <span class="input-group-btn">
                                            <button class="btn btn-success" ng-click="uploadFile(euroRemittance.userDocument.Name,euroRemittance.userDocument.Id,'','Create','Check Euro Remittance Invoice')" type="button">Upload</button>
                                        </span>
                                      </div>
                                </div>

                                <div class="col-md-3" ng-show="euroRemittance.ContentDistribution.PreferencesAllowPDFDownload">
                                    <a class="blue-btn float-end mt-4 py-3" ng-click="filePreviewHandler(euroRemittance)">View</a>
                                </div>
                                
                            </div>
                        </div>
                
            </div>
            </body>
            </div>
            </html>
</apex:page>