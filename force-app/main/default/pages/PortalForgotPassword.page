<apex:page controller="PortalForgotPasswordController" showHeader="false" sidebar="false" standardStylesheets="false">
<html>
<head>
    <title>Forgot Password - IGSTC</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css"/>
    <link href="https://fonts.googleapis.com/css2?family=Nunito+Sans:wght@400;600;700&display=swap" rel="stylesheet"/>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.6.9/angular.min.js"></script>
    <style>
        body {
            font-family: "Nunito Sans", sans-serif;
            background-color: #f1f1f1;
            margin: 0;
            padding: 0;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            box-sizing: border-box;
        }
        .forgot-container {
            background: white;
            border-radius: 20px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
            width: 90%;
            max-width: 420px;
            padding: 2.5rem;
            text-align: center;
        }
        .logo-section { margin-bottom: 1.5rem; }
        .logo-section img { width: 100px; height: auto; margin-bottom: 0.5rem; }
        .forgot-title {
            text-align: center;
            font-size: 1.6rem;
            font-weight: 700;
            color: #4F1BA3;
            margin: 1.5rem 0;
        }
        .forgot-subtitle {
            text-align: center;
            font-size: 0.95rem;
            color: #666;
            margin-bottom: 2rem;
        }
        .form-group { text-align: left; margin-bottom: 1.5rem; }
        .form-label { font-weight: 600; color: #4b0082; font-size: 1rem; margin-bottom: 0.5rem; display: block; }
        .form-label .required { color: red; }
        .form-input {
            width: 100%; padding: 0.75rem; border: 1px solid #ccc; border-radius: 6px;
            font-size: 1rem; box-sizing: border-box; height: 45px;
        }
        .form-input:focus {
            outline: none; border-color: #4b0082; box-shadow: 0 0 0 2px rgba(75, 0, 130, 0.1);
        }
        .submit-btn {
            width: 100%; background: #4b0082; color: white; border: none; border-radius: 6px;
            padding: 0.75rem; font-size: 1.1rem; font-weight: 600; cursor: pointer;
            transition: background 0.3s ease; margin-top: 0.5rem; height: 45px;
        }
        .submit-btn:hover { background: #6a0dad; }
        .submit-btn:disabled { background: #cccccc; cursor: not-allowed; }
        .loader {
            display: inline-block; width: 18px; height: 18px;
            border: 2px solid #f3f3f3; border-top: 2px solid #4b0082;
            border-radius: 50%; animation: spin 1s linear infinite; margin-right: 8px;
        }
        @keyframes spin { 0% { transform: rotate(0deg); } 100% { transform: rotate(360deg); } }
        .error-message {
            color: red;
            font-size: 12px;
            margin-top: 5px;
            display: none;
        }
        .back-to-login {
            margin-top: 1.5rem;
            text-align: center;
        }
        .back-to-login a {
            color: #4b0082;
            text-decoration: none;
            font-weight: 600;
        }
        .back-to-login a:hover {
            text-decoration: underline;
        }
    </style>
</head>
<body ng-app="myApp" ng-controller="myCtrl">
    <div class="forgot-container">
        <div class="logo-section">
            <img src="{!URLFOR($Resource.Logo)}" alt="IGSTC Logo"/>
        </div>

        <div class="forgot-title">Forgot Password?</div>
        <div class="forgot-subtitle">
            Enter your email address and we'll send you a link to reset your password.
        </div>
        
        <div class="form-group">
            <label class="form-label">
                <i class="fas fa-envelope"></i> Email Address <span class="required">*</span>
            </label>
            <input type="email" id="userEmail" class="form-input" 
                   placeholder="Enter your registered email address" 
                   ng-model="userEmail"
                   ng-keypress="handleKeyPress($event)"/>
            <div id="emailError" class="error-message">Please enter a valid email address</div>
        </div>

        <button class="submit-btn" ng-click="sendResetLink()" type="button" ng-disabled="isLoading">
            <span id="btnText">SEND RESET LINK</span>
            <span id="btnLoader" style="display:none;"><div class="loader"></div>Sending...</span>
        </button>

        <div class="back-to-login">
            <a href="/ApplicantDashboard">
                <i class="fas fa-arrow-left"></i> Back to Login
            </a>
        </div>
    </div>

    <script>
        var app = angular.module('myApp',[]);
        app.controller('myCtrl', function($scope, $timeout){
            $scope.userEmail = "";
            $scope.isLoading = false;
            
            $scope.handleKeyPress = function(event) {
                if (event.keyCode === 13) {
                    $scope.sendResetLink();
                }
            };
            
            $scope.sendResetLink = function(){
                var email = $scope.userEmail;
                
                // Validate email
                if (!email) {
                    document.getElementById('emailError').style.display = 'block';
                    document.getElementById('emailError').innerText = 'Please enter your email address';
                    return;
                }
                
                // Basic email validation
                var emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
                if (!emailRegex.test(email)) {
                    document.getElementById('emailError').style.display = 'block';
                    document.getElementById('emailError').innerText = 'Please enter a valid email address';
                    return;
                } else {
                    document.getElementById('emailError').style.display = 'none';
                }

                // Show loader
                $scope.isLoading = true;
                document.getElementById('btnText').style.display = 'none';
                document.getElementById('btnLoader').style.display = 'inline';
                
                // Call remote action
                Visualforce.remoting.Manager.invokeAction(
                    '{!$RemoteAction.PortalForgotPasswordController.ForgotPassapplication}',
                    email,
                    function(result, event) {
                        // Reset button state
                        $scope.isLoading = false;
                        document.getElementById('btnText').style.display = 'inline';
                        document.getElementById('btnLoader').style.display = 'none';
                        
                        if (event.status) {
                            if (result === 'success') {
                                Swal.fire({
                                    icon: 'success',
                                    title: 'Email Sent!',
                                    html: 'A password reset link has been sent to <b>' + email + '</b>.<br/><br/>Please check your email and follow the instructions to reset your password.',
                                    confirmButtonColor: '#4b0082',
                                    confirmButtonText: 'OK'
                                }).then(() => {
                                    // Clear the email field
                                    $scope.userEmail = "";
                                    $scope.$apply();
                                });
                            } else if (result && result.indexOf('error:') === 0) {
                                var errorMsg = result.replace('error:', '').trim();
                                if (errorMsg === 'Email not found') {
                                    Swal.fire({
                                        icon: 'error',
                                        title: 'Email Not Found',
                                        text: 'This email address is not registered with us. Please check and try again.',
                                        confirmButtonColor: '#4b0082'
                                    });
                                } else {
                                    Swal.fire({
                                        icon: 'error',
                                        title: 'Error',
                                        text: errorMsg,
                                        confirmButtonColor: '#4b0082'
                                    });
                                }
                            } else {
                                Swal.fire({
                                    icon: 'error',
                                    title: 'Error',
                                    text: 'Unable to send reset link. Please try again later.',
                                    confirmButtonColor: '#4b0082'
                                });
                            }
                        } else {
                            Swal.fire({
                                icon: 'error',
                                title: 'Connection Error',
                                text: event.message || 'Unable to connect to server. Please check your internet connection and try again.',
                                confirmButtonColor: '#4b0082'
                            });
                        }
                        $scope.$apply();
                    },
                    {escape: true, buffer: false, timeout: 30000}
                );
            }
        });

        // Autofocus email field
        document.addEventListener('DOMContentLoaded', function() {
            var emailField = document.getElementById('userEmail');
            if (emailField) {
                emailField.focus();
            }
        });
    </script>
</body>
</html>
</apex:page>