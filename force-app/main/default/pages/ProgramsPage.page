        border-radius: 8px;
        position: absolute;
        top: 68px;
        right: 54px;
        padding: 0 24px 16px;
        box-sizing: border-box;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        }

        .profile-title{
            width: 100%;
            border-bottom: 1px solid gray;
            padding: 16px 0;
            display: flex;
            align-items: center;
        }

        .profile-img{
            margin-right: 24px;
            width: 48px;
            height: 48px;
            background-color: #FB8A2E;
            border-radius: 50%;
        }
        .profile-info{

        }

        .profile-Name{
        font-size: 14px;
        font-weight: 600;
        color: #000000;
        margin-bottom: 5px;
        }

        .profile-email{
        font-size: 12px;
        font-weight: 400;
        color: #6B6B6B;
        }

        .password{
        font-size: 14px;
        font-weight: 600;
        color: #000000;
        cursor: pointer;
        }

        .section-title{
        font-size: 24px;
        font-weight: 600;
   		margin: 24px 0;
        color: #4F1BA3;
        }
   
        
        .grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(420px, 1fr));
    gap: 16px;
    justify-content: start; /* align left */
    align-items: stretch;  /* make all cards same height */
    margin-bottom: 48px;
}        
        .card {
    height: 280px; /* fixed height for all cards */
    border-radius: 24px;
    border: 1px solid var(--Stroke, #E7EAEE);
    box-shadow: 0px 4px 4px 0px #0000001F;
    padding: 16px 18px;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}        .card > .desc {
    min-height: 120px; /* force uniform description height */
    
}
        
        .head{
        display: flex;
        height: 48px;
        /* border: 1px solid; */
        }
        
        .head-img{
        width: 48px;
        height: 48px;
        border-radius: 50%;
        background-color: orange;
        margin-right: 16px;
        }
        
        .head-text{
        height: 43px;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        /* border: 1px solid; */
        }
        
        .title{
        font-size: 20px;
        font-weight: 700;
        text-transform: uppercase;
        color: #000000;
        }
        
        .date{
        font-size: 11px;
        font-weight: 600;
        color: #6B6B6B;
        }
        
        .date1{
        color: #E2425C;
        }
        
        .desc{
        font-size: 12px;
        font-weight: 400;
        line-height: 16px;
        color: #343434;
        
        display: -webkit-box;
        -webkit-line-clamp: 3;        /* limit to 3 lines */
        -webkit-box-orient: vertical;
        overflow: hidden;
        text-overflow: ellipsis;
        
        /* IMPORTANT for long strings with no spaces */
        word-break: break-word;
        overflow-wrap: anywhere;
        white-space: normal;
        margin: 16px 0;
        }
        
        .actions{
        width: 220px;
        display: flex;
        justify-content: space-between;
        }
        
        .action-btns{
        width: 106px;
        height: 32px;
        border-radius: 24px;
        display: flex;
        justify-content: center;
        align-items: center;
        font-size: 14px;
        font-weight: 600;
        border: none;
        box-sizing: border-box;
        cursor: pointer;
        color: white;
        }
        
        /* .action-btns:hover{
        filter: contrast(50%);
        } */
        .apply{
        background-color: #4F1BA3;
        
        }
        
        .know-more{
        color: #4F1BA3;
        border: 1px solid #4F1BA3;
        }
        
        .comp-view{
        background-color:  #709739;
        }
        
        .rej-view{
        background-color: #E2425C;
        }
        
        .list{
        margin: 16px 0;
        }
        
        .list-item{
        margin-bottom: 8px;
        letter-spacing: 1%;
        font-size: 12px;
        font-weight: 600;
        color: #343434;
        text-indent: -24px;
        margin-left: 27px;
        }
        
        .grant-icon{
