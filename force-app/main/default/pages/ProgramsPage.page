    <div class="main-container" ng-app="igstcApp" ng-controller="DashCtrl as vm">
        <div class="sidemenu">
            <div class="company-logo"><apex:image url="{!URLFOR($Resource.Logo)}" styleClass="logo"/></div>
            <div class="navblock">
                <ul class="navlist">
                    <li Class="nav-item"><apex:image styleClass="nav-icon"></apex:image> Dashboard</li>
                    <li Class="nav-item active"><apex:image styleClass="nav-icon"></apex:image> Programs</li>
                    <li Class="nav-item"><apex:image styleClass="nav-icon"></apex:image> Get Help</li>
                    <li Class="nav-item"><apex:image styleClass="nav-icon"></apex:image> FAQ's</li>
                </ul> 
                
                <ul class="navlist">
                    <li Class="nav-item"><apex:image styleClass="nav-icon"></apex:image> profile</li>
                    <li Class="nav-item"><apex:image styleClass="nav-icon"></apex:image>Logout</li>    
                </ul>
            </div>
        </div>
         <div class="content">
             <div class="content">
                      <div class="header">
                        <div class="profile">
                          <i class="fa-regular fa-bell bell"></i>
                          <div class="line">|</div>
                          <!-- User Name dynamically -->
                          <span class="name">{!$User.FirstName} {!$User.LastName}</span>
                    
                          <div class="profile-image"></div>
                    
                          <div ng-hide="vm.showProfileBox" ng-click="vm.showProfileBox = !vm.showProfileBox">
                            <i class="fa-solid fa-angle-down arrow-icon"></i>
                          </div>
                          <div ng-show="vm.showProfileBox" ng-click="vm.showProfileBox = !vm.showProfileBox">
                            <i class="fa-solid fa-angle-up arrow-icon"></i>
                          </div>
                        </div>
                    
                        <div class="profile-box" ng-show="vm.showProfileBox">
                          <div class="profile-title">
                            <div class="profile-img"></div>
                            <div class="profile-info">
                              <!-- User Full Name -->
                              <div class="profile-Name">{!$User.FirstName} {!$User.LastName}</div>
                              <!-- User Email -->
                              <div class="profile-email">{!$User.Email}</div>
                            </div>
                          </div>
                          <div class="password">Reset Password</div>
                          <div class="password">Logout</div>
                        </div>
                      </div>
                    </div>

            
            <!-- ====== UNDER APPROVAL SECTION ====== -->
<div class="section-title">Under Approval</div>
<div class="grid">
    <div class="card" ng-repeat="i in vm.approval track by $index">
        <div class="head">
            <div class="head-img"></div>
            <div class="head-text">
                <div class="title">[[i.title]]</div>
                <div class="date1 date">
                    Application Deadline:
                    <span ng-if="i.applicationDeadline">[[i.applicationDeadline | date: 'dd MMM, yyyy']]</span>
                </div>
            </div>
        </div>
        <div class="desc">[[i.shortDescription]]</div>
        <div class="actions">
            <div class="action-btns apply">Apply</div>
            <div class="action-btns know-more">Know More</div>
        </div>
    </div>
</div>

<!-- ====== UNDER GRANT SECTION ====== -->
<div class="section-title">Under Grant</div>
<div class="grid">
    <div class="card" ng-repeat="g in vm.grants track by $index">
        <div class="head">
            <div class="head-img"></div>
            <div class="head-text">
                <div class="title">[[g.title]]</div>
                <div class="date1 date">
                    Grant Period:
                    <span ng-if="g.grantPeriod">[[g.grantPeriod | date: 'dd MMM, yyyy']]</span>
                </div>
            </div>
        </div>
        <div class="desc">[[g.shortDescription]]</div>
        <div class="actions">
            <div class="action-btns apply">View Details</div>
            <div class="action-btns know-more">Know More</div>
        </div>
    </div>
</div>
                  <!-- ====== COMPLETED SECTION ====== -->
    <div class="section-title">Completed</div>
    <div class="grid">
        <div class="card" ng-repeat="c in vm.completed track by $index">
            <div class="head">
                <div class="head-img"></div>
                <div class="head-text">
                    <div class="title">[[c.title]]</div>
                    <div class="date1 date">
                        Grant Period:
                        <span ng-if="c.grantPeriod">[[c.grantPeriod | date: 'dd MMM, yyyy']]</span>
                    </div>
                </div>
            </div>
            <div class="desc">[[c.shortDescription]]</div>
            <div class="actions">
                <div class="action-btns apply">Views</div>
               
            </div>
        </div>
    </div>
    
    <!-- ====== REJECTED SECTION ====== -->
    <div class="section-title" >Rejected</div>
    <div class="grid" >
        <div class="card" ng-repeat="r in vm.rejected track by $index" >
            <div class="head">
                <div class="head-img"></div>
                <div class="head-text">
                    <div class="title">[[r.title]]</div>
                    <div class="date1 date">
                        Grant Period:
                        <span ng-if="r.grantPeriod">[[r.grantPeriod | date: 'dd MMM, yyyy']]</span>
                    </div>
                </div>
            </div>
            <div class="desc">[[r.shortDescription]]</div>
            <div class="actions">
                <div class="action-btns apply">View</div>
                
            </div>
        </div>
    </div>
            
        </div>
        </div>
    
    
